<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-focus-color: transparent;" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stitch.converter.view.OverviewController">
   <bottom>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="120.0" prefWidth="1000.0" style="-fx-background-color: transparent;" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <TextArea fx:id="log" editable="false" prefHeight="198.0" prefWidth="984.0" style="-fx-background-color: transparent;">
               <font>
                  <Font size="11.0" />
               </font>
            </TextArea>
         </content>
      </ScrollPane>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%file">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#newfile" text="%new_file_menu" />
                  <MenuItem mnemonicParsing="false" onAction="#load" text="%file_open_menu" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="save" disable="true" mnemonicParsing="false" onAction="#save" text="%save_menu" />
                  <MenuItem fx:id="saveTo" disable="true" mnemonicParsing="false" onAction="#saveTo" text="%save_to_menu" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exportPng" disable="true" mnemonicParsing="false" onAction="#exportImage" text="%export_converted_image_menu" />
                  <MenuItem fx:id="exportCsv" disable="true" mnemonicParsing="false" onAction="#exportColor" text="%export_stitch_list_menu" />
                  <MenuItem fx:id="exportBlueprint" disable="true" mnemonicParsing="false" onAction="#exportBlueprint" text="%export_blueprint_menu" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="%setting">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#setting" text="%setting_menu" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="%etc">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#author" text="%about" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <ScrollPane hbarPolicy="ALWAYS" style="-fx-background-color: transparent;" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <Canvas fx:id="canvas" disable="true" height="700.0" width="1000.0" />
         </content>
      </ScrollPane>
   </center>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="colorTable" disable="true" editable="true" prefHeight="800.0" prefWidth="250.0" tableMenuButtonVisible="true">
              <columns>
                <TableColumn fx:id="highlightColumn" minWidth="30.0" prefWidth="30.0" resizable="false" text="%table_title_highlight" />
                <TableColumn fx:id="completeColumn" prefWidth="30.0" resizable="false" text="%table_title_completed" />
                  <TableColumn fx:id="indexColumn" prefWidth="50.0" text="%index" />
                  <TableColumn fx:id="colorColumn" prefWidth="70.0" text="%table_title_color" />
                  <TableColumn fx:id="nameColumn" prefWidth="70.0" text="%table_title_name" />
              </columns>
            </TableView>
            <TextField fx:id="zoom" />
            <CheckBox fx:id="showNumberCheckbox" disable="true" mnemonicParsing="false" onAction="#onShowNumberCheckboxClicked" text="%button_show_index" />
         </children>
      </VBox>
   </right>
</BorderPane>
